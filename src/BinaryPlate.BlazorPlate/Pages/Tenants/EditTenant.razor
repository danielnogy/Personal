@page "/tenants/EditTenant/{tenantId}"
@attribute [Authorize]

<MudText Typo="Typo.h5" Color="Color.Primary">@Resource.Edit_Tenant</MudText>
 <EditForm Model="TenantForEdit" OnValidSubmit="SubmitForm">
     <EditContextApiExceptionFallback @ref="EditContextApiExceptionFallback" />
     <FluentValidationValidator />
     <MudHidden @bind-Value="TenantForEdit.ConcurrencyStamp" />
     <MudCard Elevation="25">
         <MudCardContent>
             <MudTextField @bind-Value="TenantForEdit.Name"
                           Label="@Resource.Name"
                           Variant="Variant.Outlined"
                           For="@(() => TenantForEdit.Name)" />

             <MudSwitch @bind-Checked="@TenantForEdit.Enabled"
                        Label="@Resource.Enabled"
                        Color="Color.Info" />
         </MudCardContent>
         <MudCardActions Class="pb-4 pl-4">
             <MudButton ButtonType="ButtonType.Submit"
                        Variant="Variant.Filled"
                        Color="Color.Primary"
                        Class="ml-auto"
                        FullWidth="true">
                 <MudText>@Resource.Save</MudText>
             </MudButton>
         </MudCardActions>
         <MudDivider />
         <MudExpansionPanels>
             <MudExpansionPanel Text="@Resource.Validation_Summary" IsExpanded="true" Disabled="true" HideIcon="true">
                 <MudText Color="@Color.Error">
                     <ValidationSummary />
                 </MudText>
             </MudExpansionPanel>
         </MudExpansionPanels>
     </MudCard>
 </EditForm>
