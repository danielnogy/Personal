@page "/poc/army/ViewApplicant/{applicantId}"
@attribute [Authorize(Roles = "Admin,Full-Privileged-Officer,Read-Only-Officer,External-Login")]

<MudText Typo="Typo.h5" Color="Color.Primary">@Resource.View_Applicant</MudText>
<MudCard>
        <MudCardContent>
            <MudNumericField Disabled="true"
                             Label="@Resource.SSN"
                             Variant="Variant.Outlined"
                             @bind-Value="ApplicantForEdit.Ssn"
                             For="@(() => ApplicantForEdit.Ssn)" />

            <MudTextField Disabled="true"
                          Label="@Resource.First_Name"
                          Variant="Variant.Outlined"
                          @bind-Value="ApplicantForEdit.FirstName"
                          For="@(() => ApplicantForEdit.FirstName)" />

            <MudTextField Disabled="true"
                          Label="@Resource.Last_Name"
                          Variant="Variant.Outlined"
                          @bind-Value="ApplicantForEdit.LastName"
                          For="@(() => ApplicantForEdit.LastName)" />

            <MudDatePicker Disabled="true"
                           Label="@Resource.Date_of_Birth"
                           Variant="Variant.Outlined"
                           @bind-Date="ApplicantForEdit.DateOfBirth"
                           For="@(() => ApplicantForEdit.DateOfBirth)"
                           Rounded="true"
                           Elevation="12"
                           ShowWeekNumbers="true"
                           Editable="true"
                           OpenTo="OpenTo.Year"
                           MaxDate="@DateTime.Now.AddYears(-18)" />
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Resource.Body_Mass_Index</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="6">
                            <MudNumericField Disabled="true"
                                             Label="@Resource.Height"
                                             Variant="Variant.Outlined" @bind-Value="ApplicantForEdit.Height"
                                             For="@(() => ApplicantForEdit.Height)" />

                            <MudNumericField Disabled="true"
                                             Label="@Resource.Weight"
                                             Variant="Variant.Outlined"
                                             @bind-Value="ApplicantForEdit.Weight"
                                             For="@(() => ApplicantForEdit.Weight)" />

                            <MudNumericField Disabled="true"
                                             Label="@Resource.BMI"
                                             Variant="Variant.Outlined"
                                             @bind-Value="ApplicantForEdit.Bmi"
                                             For="@(() => ApplicantForEdit.Bmi)" />
                            <br />
                            <MudAlert Elevation="2" Severity="Severity.Info">@Resource.BMI_Info</MudAlert>
                            <br />
                            <MudAlert Elevation="2" Severity="Severity.Info">@Resource.BMI_Details</MudAlert>
                        </MudItem>
                        <MudItem xs="6">
                            <MudPaper Class="d-flex">
                                <MudImage Src="https://raw.githubusercontent.com/BP-NET/bp-images/main/images/bmi.jpg"></MudImage>
                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
                <MudCardActions Class="pb-4 pl-4">
                    <MudButton Href="/poc/army/applicants"
                               Variant="Variant.Filled"
                               EndIcon="@Icons.Material.Outlined.ArrowBack"
                               Color="Color.Primary">
                        <MudText>@Resource.Return</MudText>
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudCardContent>
    </MudCard>
