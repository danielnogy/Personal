@page "/poc/army/EditApplicant/{applicantId}"
@attribute [Authorize(Roles = "Admin,Full-Privileged-Officer,Read-Only-Officer,External-Login")]

<MudText Typo="Typo.h5" Color="Color.Primary">@Resource.Edit_Applicant</MudText>
<EditForm Model="ApplicantForEdit" OnValidSubmit="SubmitForm">
    <EditContextApiExceptionFallback @ref="EditContextApiExceptionFallback" />
    <FluentValidationValidator />
    <MudHidden @bind-Value="ApplicantForEdit.ConcurrencyStamp" />
    <MudCard>
        <MudCardContent>
            <MudTabs KeepPanelsAlive="true" Elevation="25" Color="Color.Transparent" Rounded="true" PanelClass="mt-6">
                <MudTabPanel Text="@Resource.Applicant" Icon="@Icons.Material.Filled.Photo">
                    <MudGrid>
                        <MudItem xs="6">
                            <MudTextField Label="@Resource.SSN"
                                          Mask="@(new PatternMask("000000000"))"
                                          Variant="Variant.Outlined"
                                          @bind-Value="ApplicantForEdit.Ssn"
                                          For="@(() => ApplicantForEdit.Ssn)" />

                            <MudTextField Label="@Resource.First_Name"
                                          Variant="Variant.Outlined"
                                          @bind-Value="ApplicantForEdit.FirstName"
                                          For="@(() => ApplicantForEdit.FirstName)" />

                            <MudTextField Label="@Resource.Last_Name"
                                          Variant="Variant.Outlined"
                                          @bind-Value="ApplicantForEdit.LastName"
                                          For="@(() => ApplicantForEdit.LastName)" />

                            <MudDatePicker Label="@Resource.Date_of_Birth"
                                           Variant="Variant.Outlined"
                                           @bind-Date="ApplicantForEdit.DateOfBirth"
                                           For="@(() => ApplicantForEdit.DateOfBirth)"
                                           Rounded="true"
                                           Elevation="12"
                                           ShowWeekNumbers="true"
                                           Editable="true"
                                           OpenTo="OpenTo.Year"
                                           MaxDate="@DateTime.Now.AddYears(-18)" />

                            <MudText Typo="Typo.h6">@Resource.Body_Mass_Index</MudText>

                            <MudTextField Label="@Resource.Height"
                                          Variant="Variant.Outlined"
                                          @bind-Value="ApplicantForEdit.Height"
                                          For="@(() => ApplicantForEdit.Height)" />

                            <MudTextField Label="@Resource.Weight"
                                          Variant="Variant.Outlined"
                                          @bind-Value="ApplicantForEdit.Weight"
                                          For="@(() => ApplicantForEdit.Weight)" />

                            <MudTextField Label="@Resource.BMI"
                                          Variant="Variant.Outlined"
                                          @bind-Value="ApplicantForEdit.Bmi"
                                          For="@(() => ApplicantForEdit.Bmi)"
                                          Disabled="true" />
                            <br />
                            <MudAlert Elevation="2" Severity="Severity.Info">@Resource.BMI_Info</MudAlert>
                            <br />
                            <MudAlert Elevation="2" Severity="Severity.Info">@Resource.BMI_Details</MudAlert>
                        </MudItem>
                        <MudItem xs="6">
                            <MudPaper Class="d-flex">
                                <MudImage Src="https://raw.githubusercontent.com/BP-NET/bp-images/main/images/bmi.jpg"></MudImage>
                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </MudTabPanel>
                <MudTabPanel Text="@Resource.References" Icon="@Icons.Material.Filled.GroupWork">
                    <MudCard Elevation="25">
                        <MudCardContent>
                            <ApplicantReferencesListForEdit ApplicantId="@ApplicantId"
                                                            OnAddedApplicantReferencesListChanged="RefreshNewApplicantReferencesList"
                                                            OnModifiedApplicantReferencesListChanged="RefreshModifiedApplicantReferencesList"
                                                            OnRemovedApplicantReferencesListChanged="RefreshRemovedApplicantReferencesList" />
                        </MudCardContent>
                    </MudCard>
                </MudTabPanel>
            </MudTabs>
        </MudCardContent>
        <MudCardActions Class="pb-4 pl-4">
            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       Class="ml-auto"
                       FullWidth="true">
                <MudText>@Resource.Save</MudText>
            </MudButton>
        </MudCardActions>
        <MudDivider />
        <MudExpansionPanels>
            <MudExpansionPanel Text="@Resource.Validation_Summary" IsExpanded="true" Disabled="true" HideIcon="true">
                <MudText Color="@Color.Error">
                    <ValidationSummary />
                </MudText>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </MudCard>
</EditForm>
