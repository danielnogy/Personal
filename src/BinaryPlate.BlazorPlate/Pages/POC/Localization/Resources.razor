@page "/poc/Localization/resources"

<MudCard Elevation="5">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-4">@Resource.Culture_Based_Resources</MudText>
            <MudFab OnClick="@ShowTipsDialog" Label="@Resource.Tips" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.TipsAndUpdates" Size="Size.Small" IconSize="Size.Small" Class="ma-2" />
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <MudTabPanel Style="text-transform:none" Text="[ResourceName].[Key]">
                <MudText Align="Align.Justify">@Resource.Lorem</MudText>
                <hr />
                <MudElement><img style="width:100%" src="https://raw.githubusercontent.com/BP-NET/bp-images/main/images/code-screenshots/static-resource-class.png" /></MudElement>
            </MudTabPanel>
            <MudTabPanel Style="text-transform:none" Text="LocalizationService.GetString(Key)">
                <MudText Align="Align.Justify">@LocalizationService.GetString("Ispum")</MudText>
                <hr />
                <MudElement><img style="width:100%" src="https://raw.githubusercontent.com/BP-NET/bp-images/main/images/code-screenshots/istringlocalizer-service.png" /></MudElement>
            </MudTabPanel>
        </MudTabs>
    </MudCardContent>
</MudCard>
