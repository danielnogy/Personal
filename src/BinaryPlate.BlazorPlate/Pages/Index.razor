@page "/"
@using BinaryPlate.BlazorPlate.Consumers.SignalRClients
@attribute [Authorize]
@inject DashboardHubClient DashboardHubClient
<MudTabs Elevation="2" KeepPanelsAlive="false" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="@Resource.Realtime_Data">
        <Dashboard />
    </MudTabPanel>
    <MudTabPanel OnClick="DashboardHubClient.CloseHubConnection" Text="@Resource.Data_Export_SignalR_Hangfire">
        <BinaryPlate.BlazorPlate.Pages.POC.Army.Applicants />
    </MudTabPanel>
    <MudTabPanel OnClick="DashboardHubClient.CloseHubConnection" Text="@Resource.Master_Details_Form">
        <AddApplicant />
    </MudTabPanel>
    <MudTabPanel OnClick="DashboardHubClient.CloseHubConnection" Text="@Resource.Global_Settings">
        <MudTabs KeepPanelsAlive="false" Elevation="4" Rounded="true" Color="@Color.Primary">
            <MudTabPanel Text="@Resource.Identity_Settings">
                <div class="mt-2">
                    <IdentitySettings />
                </div>
            </MudTabPanel>
            <MudTabPanel Text="@Resource.Token_Settings">
                <div class="mt-2">
                    <TokenSettings />
                </div>
            </MudTabPanel>
            <MudTabPanel Text="@Resource.File_Storage_Settings">
                <div class="mt-2">
                    <FileStorageSettings />
                </div>
            </MudTabPanel>
        </MudTabs>
    </MudTabPanel>
    <MudTabPanel OnClick="DashboardHubClient.CloseHubConnection" Text="@Resource.Resources">
        <Resources />
    </MudTabPanel> 
    <MudTabPanel OnClick="DashboardHubClient.CloseHubConnection" Text="@Resource.ConcurrencyConflictDetection">
        <ConcurrencyConflictDetection />
    </MudTabPanel>
</MudTabs>
