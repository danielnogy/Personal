@layout AccountLayout
@page "/account/loginWith2Fa/{username}"

<EditForm Model="@LoginWith2FaCommand" OnValidSubmit="LoginWith2FaUser">
    <EditContextApiExceptionFallback @ref="EditContextApiExceptionFallback"/>
    <FluentValidationValidator/>
    <MudText Typo="Typo.h4" GutterBottom="true">@Resource.Login_With_Authenticator_Code</MudText>
    <MudText>
        @Resource.Dont_have_access_to_your_authenticator_device @Resource.You_can <MudLink Href="@RecoveryCodeUrl">@Resource.log_in_with_a_recovery_code</MudLink>
    </MudText>

    <MudTextField Label="@Resource.Authenticator_Code"
                  Variant="Variant.Outlined"
                  @bind-Value="LoginWith2FaCommand.TwoFactorCode"
                  For="@(() => LoginWith2FaCommand.TwoFactorCode)"/>

    @if (!UserPasswordService.UserPasswordProvided())
    {
        <MudTextField Label="@Resource.Password"
                      Variant="Variant.Outlined"
                      @bind-Value="LoginWith2FaCommand.Password"
                      For="@(() => LoginWith2FaCommand.Password)"
                      InputType="@UserPasswordService.PasswordInput"
                      Adornment="Adornment.End"
                      AdornmentIcon="@UserPasswordService.PasswordInputIcon"
                      OnAdornmentClick="UserPasswordService.TogglePasswordVisibility"/>
    }
    <MudDivider/>
    <MudButton ButtonType="ButtonType.Submit"
               Style="margin-top: 4px"
               Variant="Variant.Filled"
               Color="Color.Primary"
               Size="Size.Large"
               FullWidth="true">
        <MudText>@Resource.Submit</MudText>
    </MudButton>
    <MudExpansionPanels>
        <MudExpansionPanel Text="@Resource.Validation_Summary" IsExpanded="true" Disabled="true" HideIcon="true">
            <MudText Color="@Color.Error">
                <ValidationSummary/>
            </MudText>
        </MudExpansionPanel>
    </MudExpansionPanels>
</EditForm>