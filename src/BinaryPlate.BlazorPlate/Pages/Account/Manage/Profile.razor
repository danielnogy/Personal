@if (UserForEdit != null)
{
    <EditForm Model="@UserForEdit" OnValidSubmit="UpdateUserProfile">
        <EditContextApiExceptionFallback @ref="EditContextApiExceptionFallback" />
        <FluentValidationValidator />
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@Resource.My_Profile</MudText>
                    </CardHeaderContent>
            </MudCardHeader>
                <MudCardContent>
                    <MudTextField @bind-Value="UserForEdit.Email"
                                  Label="@Resource.Email"
                                  Variant="Variant.Outlined"
                                  Disabled="true" />

                    <MudTextField @bind-Value="UserForEdit.Name"
                                  Label="@Resource.Name"
                                  Variant="Variant.Outlined"
                                  For="@(() => UserForEdit.Name)" />

                    <MudTextField @bind-Value="UserForEdit.Surname"
                                  Label="@Resource.Surname"
                                  Variant="Variant.Outlined"
                                  For="@(() => UserForEdit.Surname)" />

                    <MudTextField @bind-Value="UserForEdit.JobTitle"
                                  Label="@Resource.Job_Title"
                                  Variant="Variant.Outlined"
                                  For="@(() => UserForEdit.JobTitle)" />

                    <MudTextField Label="@Resource.Phone_Number"
                                  Variant="Variant.Outlined" @bind-Value="UserForEdit.PhoneNumber"
                                  For="@(() => UserForEdit.PhoneNumber)" />
                </MudCardContent>
                <MudCardActions Class="pb-4 pl-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="ml-auto"
                               FullWidth="true">
                        <MudText>@Resource.Save</MudText>
                    </MudButton>
                </MudCardActions>
                <MudDivider />
                <MudExpansionPanels>
                    <MudExpansionPanel Text="@Resource.Validation_Summary" IsExpanded="true" Disabled="true" HideIcon="true">
                        <MudText Color="@Color.Error">
                            <ValidationSummary />
                        </MudText>
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudCard>
    </EditForm>
}
