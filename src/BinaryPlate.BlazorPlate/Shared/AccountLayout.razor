@inherits LayoutComponentBase

<MudRTLProvider RightToLeft="@IsRightToLeft">
    <MudThemeProvider Theme="DefaultTheme" @bind-IsDarkMode="@IsDarkMode" />
    <MudSnackbarProvider />
    <MudDialogProvider FullWidth="false"
                       MaxWidth="MaxWidth.Large"
                       CloseButton="true"
                       DisableBackdropClick="true"
                       NoHeader="false"
                       Position="DialogPosition.Center"
                       CloseOnEscapeKey="true" />
    <AppOverlay OverlayVisible="@AppStateManager.OverlayVisible" />
    <MudLayout>
        <MudAppBar>
            <AppLogo IsDarkMode="IsDarkMode" />
            <MudSpacer />
            <MudIconButton Color="Color.Inherit"
                           OnClick="@(e => DarkModeToggle())"
                           Size="Size.Medium"
                           Icon="@(IsDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)" />
            <LanguageSwitcher />
        </MudAppBar>
        <MudMainContent>
            <GlobalSpinner Visible="AppStateManager.OverlayVisible"></GlobalSpinner>
            <MudContainer MaxWidth="MaxWidth.Small">
                <MudPaper Elevation="25" Class="pa-8 mt-8" Width="100%" MaxWidth="500px">
                    @Body
                </MudPaper>
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MudRTLProvider>
