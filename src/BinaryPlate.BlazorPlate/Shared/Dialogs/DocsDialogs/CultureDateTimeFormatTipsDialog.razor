<MudDialog>
    <DialogContent>
        <MudText>
            <MudElement HtmlTag="h4">The DateTime format displayed on this page is based on the current culture, and will be shown in the language chosen by the user.</MudElement>
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="Submit">@Resource.Got_it</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}