<MudDialog>
    <DialogContent>
        <MudText>
            <MudElement HtmlTag="h4">On this page, the Time Zone information is displayed in the language selected by the user based on their Current Culture.</MudElement>
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="Submit">@Resource.Got_it</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}